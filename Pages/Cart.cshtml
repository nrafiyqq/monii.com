@page
@model Monii.com.Pages.CartModel
@{
    ViewData["Title"] = "Your Cart";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 fw-bold">Your Shopping Cart</h2>

    @if (Model.UserCart.Count == 0)
    {
        <div class="alert alert-info text-center">
            Your cart is empty. <a href="/Index" class="alert-link">Go shopping</a>!
        </div>
    }
    else
    {
        <table class="table table-striped align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>Image</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model.UserCart)
                {
                    <tr>
                        <td style="width: 100px;">
                            <img src="@item.Product?.ImageUrl" alt="@item.Product?.Name" class="img-fluid rounded" style="max-height: 80px; object-fit: cover;" />
                        </td>
                        <td>@item.Product?.Name</td>
                        <td>RM @item.Product?.Price.ToString("0.00")</td>
                        <td>@item.Quantity</td>
                        <td>RM @(item.Product?.Price * item.Quantity)</td>
                        <td>
                            <a asp-page-handler="Remove" asp-route-cartId="@item.CartID" class="btn btn-danger btn-sm">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end mt-3">
            <h4 class="fw-bold">
                Total: RM @Model.UserCart.Sum(x => x.Product?.Price * x.Quantity)
            </h4>
            <a href="/Checkout" class="btn btn-success btn-lg mt-2">Proceed to Checkout</a>
        </div>
    }
</div>

<style>
    .table th, .table td {
        vertical-align: middle;
    }

    img {
        transition: transform 0.2s ease;
    }

    img:hover {
        transform: scale(1.05);
    }
</style>
