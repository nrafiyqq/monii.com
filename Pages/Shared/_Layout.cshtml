@using Microsoft.AspNetCore.Http
@using Monii.com.Data
@using System.Linq
@inject IHttpContextAccessor HttpContextAccessor
@inject ApplicationDbContext Db

@{
    var userName = HttpContextAccessor.HttpContext?.Session.GetString("UserName");
    var userId = HttpContextAccessor.HttpContext?.Session.GetInt32("UserID");
    int cartCount = 0;

    if (userId != null)
    {
        cartCount = Db.Carts.Count(c => c.UserID == userId);
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Monii.com</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Monii.com.styles.css" asp-append-version="true" />
</head>
<body style="background: linear-gradient(135deg, #f0f4f8 0%, #d9e2ec 100%); min-height: 100vh;">

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">Monii.com</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <!-- Left Side Links -->
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>

                    <!-- Right Side Buttons -->
                    <div class="d-flex align-items-center gap-2">
                        <!-- Cart Button -->
                        <a class="btn btn-outline-dark position-relative" asp-page="/Cart">
                            ðŸ›’ Cart
                            @if (cartCount > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    @cartCount
                                    <span class="visually-hidden">items in cart</span>
                                </span>
                            }
                        </a>

                        @if (string.IsNullOrEmpty(userName))
                        {
                            <!-- Not logged in -->
                            <a class="btn btn-outline-primary" asp-page="/Login">Login</a>
                            <a class="btn btn-primary" asp-page="/Register">Register</a>
                        }
                        else
                        {
                            <!-- Logged in -->
                            <span class="me-3">Welcome, @userName!</span>
                            <a class="btn btn-danger" asp-page="/Logout">Logout</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

