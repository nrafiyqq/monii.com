@page
@model Monii.com.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register User</h2>

<form method="post">
    <div>
        <label>Name:</label>
        <input asp-for="NewUser.Name" class="form-control" />
    </div>
    <div>
        <label>Email:</label>
        <input asp-for="NewUser.Email" type="email" class="form-control" />
    </div>
    <div>
        <label>Password:</label>
        <input asp-for="NewUser.PasswordHash" type="password" class="form-control" />
    </div>
    <div>
        <label>Role:</label>
        <input asp-for="NewUser.Role" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
