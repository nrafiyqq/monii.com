@page "{category?}"
@model Monii.com.Pages.ProductsModel
@{
    ViewData["Title"] = $"{Model.CurrentCategory} Products";
}

<h2 class="text-center mt-4">@Model.CurrentCategory Products</h2>

<div class="container mt-4">
    <div class="row">
        @if (!Model.Products.Any())
        {
            <div class="col-12 text-center text-muted">
                <p>No products found in this category.</p>
            </div>
        }
        else
        {
            int delay = 0;
            foreach (var product in Model.Products)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm border-0 animate-zoom" style="animation-delay:@(delay)ms">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name"
                             style="height: 220px; object-fit: cover;" />
                        <div class="card-body text-center">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="text-muted mb-2">RM @product.Price</p>

                            <form method="post" asp-page-handler="AddToCart">
                                <input type="hidden" name="productId" value="@product.ProductID" />
                                <button type="submit" class="btn btn-primary btn-sm">Add to Cart</button>
                            </form>

                        </div>
                    </div>
                </div>
                delay += 100; // stagger animation
            }
        }
    </div>
</div>
